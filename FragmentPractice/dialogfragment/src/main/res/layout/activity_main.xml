<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.dialogfragment.MainActivity"
    android:orientation="vertical">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试各种自定义DialogFragment"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动LoaingFragmentDialog"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动LoadingFragment"
        android:layout_marginBottom="8dp" />
    <com.example.dialogfragment.loadingview.SmileView
        android:id="@+id/smile_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:viewColor="@color/colorAccent"
        />
    <Button
        android:id="@+id/bt_start_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启动画"
        />
    <Button
        android:id="@+id/bt_end_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止动画"
        />

</LinearLayout>
