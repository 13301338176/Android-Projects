<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="cn.ssdut.lst.ledlock">
    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".LedLock"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="android.appwidget.ation.APPWIDGET_UPDATE"/>
            </intent-filter>
            <!--指定meda-data-->
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/my_lock"/>
            </receiver>
    </application>

</manifest>